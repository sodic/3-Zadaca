
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The index page</title>
</head>
<body>
<h1>Active Items</h1>
<div>
    <a class="btn-bracketed" asp-action="Add">Add new Todo</a>
<a class="btn-bracketed" asp-action="Completed">See Completed ToDos</a>
</div>
<br/>
    @if (Model == null)
    {
        <div>
            <strong>There are no active items to show.</strong>
        </div>
    }
    else
    {
        foreach (var item in Model)
         {
             <div class="bg-info">
                 <h1>
                     @item.Text
                 </h1>
                 <h2>
                     @item.DateCreated
                 </h2>
                 <a asp-action="MarkAsCompleted" asp-route-Id="@item.Id"> Mark As Completed</a>
             </div>
         }
    }
</body>
</html>